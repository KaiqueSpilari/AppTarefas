@model AppTarefas.Models.Tarefa
@{
	ViewData["Title"] = "Cadastro de Tarefas";
}

<h1>Nova Tarefa</h1>
<form asp-action="Create" method="post">
	<div class="form-group">
		<label>Título</label>
		<input asp-for="Título" class="form-control" />
	</div>

	<div class="form-group">
		<label>Descrição</label>
		<textarea asp-for="Descrição" class="form-control"></textarea>
	</div>
	<button type="submit" class="btn btn-success">salvar</button>

	<a asp-controller="Tarefas" asp-action="index" class="btn btn-secondary">Voltar</a>

</form>